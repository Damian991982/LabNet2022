@model IEnumerable<PracticaEF.Entities.Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Categories list</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-success" href="@Url.Action("Create","Categories")">Create new</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Picture)
                                </th>

                                <th style="width:150px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>@item.Picture</td>

                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit","Categories", new { id = item.CategoryID })">Edit</a>

                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Categories", new { id = item.CategoryID })">Delete</a>

                                </td>

                            </tr>

                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>

