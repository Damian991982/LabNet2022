@model PracticaEF.Entities.Categories
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Edit Categories</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Edit","Categories")" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input type="hidden" class="form-control" name="categoryID" value="@Html.DisplayTextFor(model => model.CategoryID)" />
                    <div class="form-group">
                        <label>CategoryName</label>
                        <input type="text" class="form-control" name="CategoryName" value="@Html.DisplayTextFor(model => model.CategoryName)" />
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" name="Description" value="@Html.DisplayTextFor(model => model.Description)" />
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Picture</label>
                        <input type="text" class="form-control" name="Phone" value="@Html.DisplayTextFor(model => model.Picture)" />
                        @Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a class="btn btn-warning" href="@Url.Action("Index","Categories")">Return</a>

                </form>


            </div>
        </div>


    </div>
</div>