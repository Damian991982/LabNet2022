@model PracticaEF.Entities.Shippers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Edit Shippers</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Edit","Shippers")" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input type="hidden" class="form-control" name="shipperID" value="@Html.DisplayTextFor(model => model.ShipperID)" />
                    <div class="form-group">
                        <label>CompanyName</label>
                        <input type="text" class="form-control" name="CompanyName" value="@Html.DisplayTextFor(model => model.CompanyName)" />
                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="Phone" value="@Html.DisplayTextFor(model => model.Phone)" />
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                    <a class="btn btn-warning" href="@Url.Action("Index","Shippers")">Return</a>

                </form>


            </div>
        </div>


    </div>
</div>

